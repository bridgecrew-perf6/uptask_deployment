doctype html
html(lang="en")
    head
        include parcials/header
    body
        header.barra
            h1 UpTask - Administration of project
            a(href="/cerrar-sesion") close sesion

        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto 
                    a(href="/nuevo-proyecto" class="boton") Nuevo Proyecto 
                        span +

                .panel.lista-proyectos
                    h2 Proyectos
                    ul#proyectos.proyectos
                        if proyectosCreados
                            each proyecto in proyectosCreados
                                li
                                    a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre
            block contenido
            //pre= vardump(proyectosCreados)
        script(src='/dist/bundle.js')